<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape>
            <solid android:color="#20000000" />
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
            <padding
                android:bottom="2dp"
                android:right="0.5dp" />
        </shape>
    </item>

    <!-- Foreground bubble with gradient -->
    <item>
        <shape>
            <gradient
                android:angle="315"
                android:endColor="#2A4BC8"
                android:startColor="#3657D1"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="8dp"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />
        </shape>
    </item>
</layer-list> 
