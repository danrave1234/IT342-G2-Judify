<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme (Light theme) -->
    <style name="Theme.Judify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Text appearance -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Judify.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Judify.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Judify.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Judify.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Judify.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Judify.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Judify.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Judify.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Judify.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Judify.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Judify.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Judify.Button</item>
        
        <!-- Component styles -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Judify.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Judify.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Judify.LargeComponent</item>
    </style>
    
    <!-- Dark theme -->
    <style name="Theme.Judify.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/card_background_dark</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/black</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Same text appearances as light theme -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Judify.Dark.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Judify.Dark.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Judify.Dark.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Judify.Dark.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Judify.Dark.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Judify.Dark.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Judify.Dark.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Judify.Dark.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Judify.Dark.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Judify.Dark.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Judify.Dark.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Judify.Dark.Button</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.Judify.Splash" parent="Theme.Judify">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    
    <!-- Text Appearance styles for Light theme -->
    <style name="TextAppearance.Judify.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.Judify.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Judify.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance.Judify.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Text Appearance styles for Dark theme (inherit from light but can be customized) -->
    <style name="TextAppearance.Judify.Dark.Headline1" parent="TextAppearance.Judify.Headline1">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Headline2" parent="TextAppearance.Judify.Headline2">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Headline3" parent="TextAppearance.Judify.Headline3">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Headline4" parent="TextAppearance.Judify.Headline4">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Headline5" parent="TextAppearance.Judify.Headline5">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Headline6" parent="TextAppearance.Judify.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Subtitle1" parent="TextAppearance.Judify.Subtitle1">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Subtitle2" parent="TextAppearance.Judify.Subtitle2">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Body1" parent="TextAppearance.Judify.Body1">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Body2" parent="TextAppearance.Judify.Body2">
        <item name="android:textColor">#B0B0B0</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Caption" parent="TextAppearance.Judify.Caption">
        <item name="android:textColor">#B0B0B0</item>
    </style>
    
    <style name="TextAppearance.Judify.Dark.Button" parent="TextAppearance.Judify.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Shape Appearance styles -->
    <style name="ShapeAppearance.Judify.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Judify.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.Judify.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>